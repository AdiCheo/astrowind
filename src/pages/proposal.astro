// Data for the chart
const enrollmentData = {
  weeks: ['Wk 1', 'Wk 2', 'Wk 3', 'Wk 4', 'Wk 5', 'Wk 6', 'Wk 7', 'Wk 8', 'Wk 9'],
  ridgewaySignups: [16, 32, 33, 40, 27, 22, 17, 20, 16],
  royalWindsorSignups: [10, 34, 24, 49, 36, 16, 33, 30, 19],
  capacityPerLocation: 80,
};

