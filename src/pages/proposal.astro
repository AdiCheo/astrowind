<script is:inline define:vars={{ enrollmentData, ridgewayRemaining, royalWindsorRemaining }}>
  // Chart.js script
  document.addEventListener('DOMContentLoaded', () => {
    const ctx = document.getElementById('enrollmentChart');
    if (!ctx) {
      console.error('Canvas element for chart not found!');
      return;
    }

    // Calculate total signups per week for context if needed
    const totalSignupsPerWeek = enrollmentData.ridgewaySignups.map(
      (val, idx) => val + enrollmentData.royalWindsorSignups[idx]
    );

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: enrollmentData.weeks,
        datasets: [
          {
            label: 'Ridgeway Signups',
            data: enrollmentData.ridgewaySignups,
            backgroundColor: 'rgba(56, 189, 248, 0.7)', // sky-500
            borderColor: 'rgba(56, 189, 248, 1)',
            borderWidth: 1,
            stack: 'Ridgeway', // For potential stacking if we add 'remaining'
          },
          {
            label: 'Ridgeway Remaining Spots',
            data: ridgewayRemaining,
            backgroundColor: 'rgba(203, 213, 225, 0.5)', // slate-300
            borderColor: 'rgba(203, 213, 225, 1)',
            borderWidth: 1,
            stack: 'Ridgeway',
          },
          {
            label: 'Royal Windsor Signups',
            data: enrollmentData.royalWindsorSignups,
            backgroundColor: 'rgba(34, 197, 94, 0.7)', // green-500
            borderColor: 'rgba(34, 197, 94, 1)',
            borderWidth: 1,
            stack: 'Royal Windsor',
          },
          {
            label: 'Royal Windsor Remaining Spots',
            data: royalWindsorRemaining,
            backgroundColor: 'rgba(203, 213, 225, 0.5)', // slate-300
            borderColor: 'rgba(203, 213, 225, 1)',
            borderWidth: 1,
            stack: 'Royal Windsor',
          },
        ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: {
            display: true,
            text: 'Summer Camp Enrollment Status by Week & Location (Capacity: 80 per Location/Week)',
            font: { size: 16 },
          },
          tooltip: {
            mode: 'index',
            intersect: false,
          },
          legend: {
            position: 'top',
          },
        },
        scales: {
          x: {
            title: {
              display: true,
              text: 'Camp Week',
            },
            stacked: true, // Ensure x-axis is treated as stacked for grouping
          },
          y: {
            title: {
              display: true,
              text: 'Number of Kids',
            },
